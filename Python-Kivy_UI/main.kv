<MainScreen>:
    #: import time __main__.time

    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: test_button
        text: 'off'
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.pressed1()

    DPEAButton:
        id: test_button2
        text: "0"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.pressed2()

    DPEAButton:
        id: motor_button
        text: "motor"
        x: root.width * 0.65
        y: root.height * 0.4
        on_press: root.motor_func()

    Label:
        id: motor_label
        text: "Motor off"
        pos: root.width * 0.25, root.height * 0.15
        color: 0, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0
        font_size: 30

    BoxLayout:
        Slider:
            id: slider
            min: 0
            max: 100
            step: 1
            orientation: 'vertical'
            size_hint: 0.25, 0.25


        Label:
            text: "Position: " + str(slider.value)
            color: 0, 1, 1, 1
            bold: True
            outline_width: self.font_size * 0.1
            outline_color: 0, 0, 0
            font_size: 30

    ImageButton:
        id: image
        source: "virtual-influencer-john-pork.jpeg"
        size: 200, 240
        x: root.width * 0.5
        y: root.height * 0.6
        on_press: root.transition_back()







