<ImageScreen>
    name: "images"
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: image_exit_button
        text: "exit"
        x: root.width * 0.5
        y: root.height * 0.5
        color: 1, 0, 0, 0.8
        on_press: root.transition_back()

    ImageButton:
        id: animation
        source: "steve-beef.jpeg"
        size: 188, 268
        x: root.width * 0.25
        y: root.height * 0.5
        on_press: root.animate(self)

    Label:
        id: movin_label
        color: 0, 1, 1, 1
        bold: True
        outline_width: self.font_size * 0.1
        text: "Move"
        outline_color: 0, 0, 0
        font_size: 30
